{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": "./",
        "jsx": "react",
        "paths": {
            "*": [
                "./typings/*"
            ]
        },
        "lib": ["es5", "es2017", "dom"]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
